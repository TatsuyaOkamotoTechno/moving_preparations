<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.moving_preparations.repository.TaskRepository">

    <resultMap id="TaskResultMap" type="com.example.moving_preparations.model.Task">
        <id property="id" column="id" />
        <result property="name" column="name" />
        <result property="deadline" column="deadline" jdbcType="DATE" />
        <result property="status" column="status" />
        <result property="notes" column="notes" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
    </resultMap>

    <select id="findAll" resultMap="TaskResultMap">
        SELECT id, name, deadline, status, notes, created_at, updated_at FROM TASK ORDER BY id DESC
    </select>

    <select id="findById" parameterType="long" resultMap="TaskResultMap">
        SELECT id, name, deadline, status, notes, created_at, updated_at FROM TASK WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.example.moving_preparations.model.Task" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO TASK (name, deadline, status, notes, created_at, updated_at)
        VALUES (#{name}, #{deadline}, #{status}, #{notes}, CURRENT_TIMESTAMP, CURRENT_TIMESTAMP)
    </insert>

    <update id="update" parameterType="com.example.moving_preparations.model.Task">
        UPDATE TASK
        SET name = #{name},
            deadline = #{deadline},
            status = #{status},
            notes = #{notes},
            updated_at = CURRENT_TIMESTAMP
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM TASK WHERE id = #{id}
    </delete>

</mapper>
